<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="FirstTimeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppThemeLightOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/LOrangeDark</item>
        <item name="colorPrimary">@color/lOrange</item>
        <item name="colorAccent">@color/LOrangeAccent</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="AppThemeLightGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/LGreenDark</item>
        <item name="colorPrimary">@color/LGreen</item>
        <item name="colorAccent">@color/LGreenAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppThemeLightBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/LBlueDark</item>
        <item name="colorPrimary">@color/LBlue</item>
        <item name="colorAccent">@color/LBlueAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="AppThemeLightPink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/LPinkDark</item>
        <item name="colorPrimary">@color/LPink</item>
        <item name="colorAccent">@color/LPinkAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppThemeDarkGreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/DGreenDark</item>
        <item name="colorPrimary">@color/DGreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="AboutTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@drawable/sky</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
